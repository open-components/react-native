<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aite"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /><!-- 定位  -->
    <uses-permission android:name="android.permission.CAMERA" /><!-- 相机  -->
    <uses-permission android:name="android.permission.VIBRATE"/><!-- 震动  -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/><!-- 写权限  --> 
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /><!-- 读权限  -->                                           
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <application
      android:name=".MainApplication"
      android:allowBackup="true"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:theme="@style/AppTheme">
      <meta-data android:name="android.max_aspect" android:value="2.1" /><!-- 安卓全面屏适配  -->  
      <activity
        android:name=".MainActivity"
        android:resizeableActivity="true"
        android:label="@string/app_name"
        android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
        android:windowSoftInputMode="adjustResize">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
      </activity>
      <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />
    </application>

</manifest>
